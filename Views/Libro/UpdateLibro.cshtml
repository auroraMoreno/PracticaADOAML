@model Libro

<form method="post">
    <input type="hidden" name="idLibro" value="@Model.IdLibro"/>
    <br/>
    <label>Titulo:</label>
    <input type="text" name="titulo" value="@Model.Titulo"/>
    <br/>
    <label>Autor:</label>
    <input type="text" name="autor" value="@Model.Autor"/>
    <br/>
    <label>Sinopsis</label>
    <input type="text" name="sinopsis" value="@Model.Sinopsis"/>
    <br/>
    <label>Imagen:</label>
    <input type="text" name="imagen" value="@Model.Imagen"/>
    <label>Id Genero:</label>
    <input type="number" name="idGenero" value="@Model.IdGenero"/>
    <button type="submit">Editar</button>
</form>